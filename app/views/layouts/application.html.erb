<!DOCTYPE html>
<html>
  <head>
    <title>CdpWebRailsSessionLoginTask</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, id: "#{key}") %>
    <% end %>
    <ul>
      <% if logged_in? %>
        <%# ログインしている場合 %>
        <li><%= link_to t('nav.tasks-index'), tasks_path, id: "tasks-index" %></li>
        <li><%= link_to t('nav.new-task'), new_task_path, id: "new-task" %></li>
        <li><%= link_to t('nav.my-account'), user_path(current_user.id), id: "my-account" %></li>
        <li><%= link_to t('nav.sign-out'), session_path(current_user.id), method: :delete, id: "sign-out" %></li>
      <% else %>
        <%# ログインしていない場合 %>
        <li><%= link_to t('nav.sign-up'), new_user_path, id: "sign-up" %></li>
        <li><%= link_to t('nav.sign-in'), new_session_path, id: "sign-in" %></li>
      <% end %>
    </ul>
    <%= yield %>
  </body>
</html>
